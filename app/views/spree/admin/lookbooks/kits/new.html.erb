<% content_for :page_title do %>
    <%= Spree.t(:kit) %>
<% end %>

<% content_for :page_actions do %>
    <li>
      <%= button_link_to Spree.t(:back_to_kits), spree.admin_lookbook_kits_path(@lookbook), :icon => 'arrow-left' %>
    </li>
<% end %>

<%= form_for [:admin, @lookbooks_kit], url: admin_lookbook_kits_path(@lookbook) do |f| %>

    <%= render :partial => 'spree/admin/lookbooks/kits/form', :locals => { :f => f } %>

    <fieldset class="no-border-top">
      <br>
      <div class="filter-actions actions" data-hook="buttons">
        <%= button Spree.t(:create), 'ok' %>
      </div>
    </fieldset>

<% end %>
